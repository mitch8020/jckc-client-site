<!-- Content -->
<main>
<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">

  <!-- Page Title -->
  <h1 class="text-3xl tracking-tight font-bold leading-tight text-gray-900 text-center">Admin Dashboard</h1>

  <br>

  <!-- Student Summary -->
