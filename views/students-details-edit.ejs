<%- include('partials/dashboard-head') -%>

<div class="min-h-full">
<!-- Navigation -->
<%- include('partials/navigation-admin') -%>

<!-- Content -->
<main>
<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  
<!-- Page Title -->
<h1 class="text-3xl tracking-tight font-bold leading-tight text-gray-900 text-center">Edit Student Details</h1>

<br>

<div class="mx-auto max-w-screen-xl px-4 pb-6 sm:px-6 lg:px-8 lg:pb-16">
  <div class="overflow-hidden rounded-lg bg-white shadow">
    <div class="divide-y divide-gray-200 lg:grid lg:grid-cols-12 lg:divide-y-0 lg:divide-x">

      <form class="divide-y divide-gray-200 lg:col-span-12" action="/student/push-student-details-edit/<%= student.id %>?_method=PUT" method="POST">
        
        <!-- Student Info -->
        <div class="py-6 px-4 sm:p-6 lg:pb-8">
          <div>
            <h2 class="text-lg font-medium leading-6 text-gray-900">Edit Student Info</h2>
            <p class="mt-1 text-sm text-gray-500">Update a student's information</p>
          </div>

          <div class="mt-6 grid grid-cols-12 gap-6">
            <div class="col-span-12 sm:col-span-6">
              <label for="studentFirstName" class="block text-sm font-medium text-gray-700">Student First Name</label>
              <input type="text" name="studentFirstName" id="studentFirstName" required class="mt-1 block w-full rounded-md border border-gray-300 py-2 px-3 shadow-sm focus:border-sky-500 focus:outline-none focus:ring-sky-500 sm:text-sm" value="<%= student.studentFirstName %>">
            </div>

            <div class="col-span-12 sm:col-span-6">
              <label for="studentLastName" class="block text-sm font-medium text-gray-700">Student Last Name</label>
              <input type="text" name="studentLastName" id="studentLastName" required class="mt-1 block w-full rounded-md border border-gray-300 py-2 px-3 shadow-sm focus:border-sky-500 focus:outline-none focus:ring-sky-500 sm:text-sm" value="<%= student.studentLastName %>">
            </div>

            <div class="col-span-12">
              <label for="dateOfBirth" class="block text-sm font-medium text-gray-700">Date Of Birth</label>
              <input type="date" name="dateOfBirth" id="dateOfBirth" required class="mt-1 block w-full rounded-md border border-gray-300 py-2 px-3 shadow-sm focus:border-sky-500 focus:outline-none focus:ring-sky-500 sm:text-sm"  value="<%= student.dateOfBirth %>">
            </div>

            <div class="col-span-12">
              <label for="studentStreetAddress" class="block text-sm font-medium text-gray-700">Student's Main Residence</label>
              <input type="text" name="studentStreetAddress" id="studentStreetAddress" required class="mt-1 block w-full rounded-md border border-gray-300 py-2 px-3 shadow-sm focus:border-sky-500 focus:outline-none focus:ring-sky-500 sm:text-sm" value="<%= student.studentStreetAddress %>">
            </div>

            <div class="sm:col-span-5 col-span-12">
              <label for="studentCity" class="block text-sm font-medium text-gray-700">City</label>
              <input type="text" name="studentCity" id="studentCity" required class="mt-1 block w-full rounded-md border border-gray-300 py-2 px-3 shadow-sm focus:border-sky-500 focus:outline-none focus:ring-sky-500 sm:text-sm" value="<%= student.studentCity %>">
            </div>

            <div class="sm:col-span-3 col-span-6">
              <label for="studentState" class="block text-sm font-medium text-gray-700">State / Province</label>
              
              <select name="studentState" id="studentState" required class="mt-1 block w-full rounded-md border border-gray-300 py-2 px-3 shadow-sm focus:border-sky-500 focus:outline-none focus:ring-sky-500 sm:text-sm">
                <% const states = ['AL','AK','AZ','AR','AS','CA','CO','CT','DE','DC','FL','GA','GU','HI','ID','IL','IN','IA','KS','KY','LA','ME','MD','MA','MI','MN','MS','MO','MT','NE','NV','NH','NJ','NM','NY','NC','ND','CM','OH','OK','OR','PA','PR','RI','SC','SD','TN','TX','TT','UT','VT','VA','VI','WA','WV','WI','WY'] %>
                <% for (i = 0; i < states.length; i++) { %>
                <% if (student.studentState !== states[i]) { %>
                <option value="<%= states[i] %>"><%= states[i] %></option>
                <% } else { %>
                <option value="<%= student.studentState%>" selected><%= student.studentState %></option>
                <% } %>
                <% } %>
              </select>
            </div>

            <div class="sm:col-span-4 col-span-6">
              <label for="studentZIP" class="block text-sm font-medium text-gray-700">ZIP / Postal Code</label>
              <input type="number" name="studentZIP" id="studentZIP" required class="mt-1 block w-full rounded-md border border-gray-300 py-2 px-3 shadow-sm focus:border-sky-500 focus:outline-none focus:ring-sky-500 sm:text-sm" value="<%= student.studentZIP %>">
            </div>

          </div>
        </div>

        <!-- Submit Button -->
        <div class="col-span-12 flex justify-end mt-4 flex py-4 px-4 sm:px-6">
          <a href="/student/details/<%= student.id %>"><button type="button" class="ml-5 inline-flex justify-center rounded-md border border-transparent bg-white py-2 px-4 text-sm font-medium text-sky-700 shadow-sm hover:bg-sky-100 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-offset-2">Cancel</button></a>
          <button type="submit" class="ml-5 inline-flex justify-center rounded-md border border-transparent bg-sky-700 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-sky-800 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-offset-2">Submit</button>
        </div>

      </form>
    </div>
  </div>
</div>

</div>
</main>
</div>

<%- include('partials/dashboard-close-tag') -%>