            <!-- <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
              <span class="sr-only">Edit</span>
            </th> -->
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 bg-white">
          <tr>
            <td class="w-full max-w-0 py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:w-auto sm:max-w-none sm:pl-6">
              Lindsay Walton
              <dl class="font-normal lg:hidden">
                <dt class="sr-only">Birthday</dt>
                <dd class="mt-1 truncate text-gray-700">Birthday: 06/06/2022</dd>
                <dt class="sr-only sm:hidden">Teacher</dt>
                <dd class="mt-1 truncate text-gray-500 sm:hidden">Teacher: Stacey Smith</dd>
              </dl>
            </td>
            <td class="hidden px-3 py-4 text-sm text-gray-500 lg:table-cell">06/06/2022</td>
            <td class="hidden px-3 py-4 text-sm text-gray-500 sm:table-cell">Stacey Smith</td>
            <td class="px-10 py-4 text-sm text-gray-500"> Checked In [TIME]</td>
