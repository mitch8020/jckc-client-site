<%- include('partials/dashboard-head') -%>

<div class="min-h-full">
<!-- Navigation -->
<%- include('partials/navigation-admin') -%>

<!-- Content -->
<main>
<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  
<!-- Page Title -->
<h1 class="text-3xl tracking-tight font-bold leading-tight text-gray-900 text-center">Add New Classroom</h1>

<br>

<div class="mx-auto max-w-screen-xl px-4 pb-6 sm:px-6 lg:px-8 lg:pb-16">
  <div class="overflow-hidden rounded-lg bg-white shadow">
    <div class="divide-y divide-gray-200 lg:grid lg:grid-cols-12 lg:divide-y-0 lg:divide-x">

      <form class="divide-y divide-gray-200 lg:col-span-12" action="/classroom/push-classrooms-add-new" method="POST">
        
        <!-- Student Info -->
        <div class="py-6 px-4 sm:p-6 lg:pb-8">

          <div>
            <h2 class="text-lg font-medium leading-6 text-gray-900">New Classroom Form</h2>
            <p class="mt-1 text-sm text-gray-500">Add new classroom for the daycare</p>
          </div>

          <div class="mt-6 grid grid-cols-12 gap-6">

            <div class="col-span-12">
              <label for="classroomName" class="block text-sm font-medium text-gray-700">Classroom Name</label>
              <input type="text" name="classroomName" id="classroomName" required class="mt-1 block w-full rounded-md border border-gray-300 py-2 px-3 shadow-sm focus:border-sky-500 focus:outline-none focus:ring-sky-500 sm:text-sm">
            </div>

            <div class="sm:col-span-3 col-span-12">
              <label for="ageGroup" class="block text-sm font-medium text-gray-700">Age Group</label>
              <select name="ageGroup" id="ageGroup" required class="mt-1 block w-full rounded-md border border-gray-300 py-2 px-3 shadow-sm focus:border-sky-500 focus:outline-none focus:ring-sky-500 sm:text-sm">
                <option value="infant" selected>Infant</option>
                <option value="toddler">Toddler</option>
                <option value="preschool">Preschool</option>
              </select>
            </div>

            <div class="sm:col-span-9 col-span-12">
              <label for="teacherName" class="block text-sm font-medium text-gray-700">Teacher Name</label>
              <input type="text" name="teacherName" id="teacherName" required class="mt-1 block w-full rounded-md border border-gray-300 py-2 px-3 shadow-sm focus:border-sky-500 focus:outline-none focus:ring-sky-500 sm:text-sm">
            </div>

          </div>
        </div>

        <!-- Submit Button -->
        <div class="col-span-12 flex justify-end mt-4 flex py-4 px-4 sm:px-6">
          <a href="/classroom/classrooms-summary"><button type="button" class="ml-5 inline-flex justify-center rounded-md border border-transparent bg-white py-2 px-4 text-sm font-medium text-sky-700 shadow-sm hover:bg-sky-100 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-offset-2">Cancel</button></a>
          <button type="submit" class="ml-5 inline-flex justify-center rounded-md border border-transparent bg-sky-700 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-sky-800 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-offset-2">Submit</button>
        </div>

      </form>
    </div>
  </div>
</div>

</div>
</main>
</div>

<%- include('partials/dashboard-close-tag') -%>